<Window x:Class="_11_GridLayout.Visualizza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_GridLayout"
        mc:Ignorable="d"
        Title="Visualizza" Height="450" Width="800" Loaded="Window_Loaded">
    <!-- <DataGrid x:Name="tabella" è il tag che va a creare
    una tabella, che noi impostiamo come responsive tramite
    l'attributo ColumnWidth="*". L'asterisco indica che la grandezza
    verrà impostata automaticamente in base alla grandezza della 
    finestra, ai pixel, ecc.-->
    <DataGrid x:Name="tabella" ColumnWidth="*" />

</Window>
