<Window x:Class="_18_AdoRubrica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_18_AdoRubrica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <DockPanel>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="File" Name="menu">
                <MenuItem Header="Inserimento"/>
                <MenuItem Header="Visualizza"/>
                <MenuItem Header="Ricerca" />
                <MenuItem Header="Esci"/>
            </MenuItem>
        </Menu>
        <TextBox  x:Name="txtFile" AcceptsReturn="True"  TextWrapping="Wrap" />
    </DockPanel>
</Window>
