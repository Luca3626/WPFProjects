<Window x:Class="_10_FirstWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_FirstWpf"
        mc:Ignorable="d"
        Title="Principale" Height="108" Width="564" Closing="Window_Closing">

    <!-- Questo è un pannello responsive simile al FlowLayout di Java Swing. 
    All'Interno di questo WrapPanel voglio creare una label. Userò il tag 
    TextBlock-->
    <WrapPanel>
        <TextBlock Text="Come ti chiami?" FontSize="24" FontWeight="Bold" FontFamily="Arial" Margin="10,10,10,10" />

        <TextBox x:Name="nome" Width="150" Margin="0,10,0,0"/>
        <Button x:Name="btnInvia" Content="Invio" Click="Invia_Click" Margin="10,10,0,0" FontFamily="Arial" FontWeight="Bold" FontSize="20"/>
        <Button x:Name="btnReset" Content="Reset" Click="Reset_Click" Margin="10,10,0,0" FontFamily="Arial" FontWeight="Bold" FontSize="20"/>

    </WrapPanel>

</Window>
